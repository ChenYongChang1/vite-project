{
  "compilerOptions": {

    "outDir": "dist",
    "lib": [
      "es6",
      "es2016.array.include"
    ],

    "sourceMap": true,
    "rootDir": "src",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*.ts"],
  "ts-node": {
    "esm": true, // 如果你使用的是 ES Modules
    "experimentalSpecifierResolution": "node"
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
